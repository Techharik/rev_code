{
    "source": [
        "token/**/*.json"
    ],
    "platforms": {
        "css": {
            "transformGroup": "css",
            "buildPath": "build/css/",
            "files": [
                {
                    "destination": "_variables.css",
                    "format": "css/variables"
                }
            ]
        },
        "js": {
            "transformGroup": "js",
            "buildPath": "./src/style-dictionary-dist/",
            "files": [
                {
                    "destination": "variables.js",
                    "format": "javascript/es6"
                }
            ]
        }
    }
}